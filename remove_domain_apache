## BASHCSS
pret='\E[0;30m'   # Black
verm='\E[0;31m'   # Red
verd='\E[0;32m'   # Green
amar='\E[0;33m'   # Yellow
azul='\E[0;34m'   # Blue
mage='\E[0;35m'   # Magenta
cian='\E[0;36m'   # Ciano
bran='\E[0;37m'   # White
bold='\033[37;4;1m' #BOLD
und='\033[37;4m'
rese=$(tput sgr0) # No color.
OK="${verd}[OK]${rese}";                                                                                                                                                                                                                                                       
ATT="${amar}[!]${rese}";                                                                                                                                                                                                                                                       
FAIL="${verm}[!]${rese}"; 

VERSAO="0.1b"
#limpar tela
#clear

printf "
# Author       : Sinesio Bittencourt
# Email        : contato@sinesio.com.br
# Info         : 
# Version      : v$VERSAO ( beta )
       "
echo -e "\n[!] - Bem vindo Gator.\n"
read -p "Informe o DOMINIO: "		DOMINIO
echo -e "\n"

# CHECA SE OS VALORES FORAM INSERIDOS CORREETAMENTE
if [[ -z DOMINIO ]]
then
       	echo -e "[!] - Nenhum valor pode ficar em branco, por favor tente novamente."
	exit
else
	printf "${verd}[OK]${rese} - Verificando o DOMINIO"
	printf ${OK} "- Execultando comando" ${rese}
	/scripts/whoowns $DOMINIO
	#echo $DOMINIO
	/scripts/killdns $DOMINIO
	/scripts/killvhost $DOMINIO 
	/scripts/cleandns $DOMINIO
	
	sleep 3
echo "[+] - Limpando cache"
	
	/scripts/updateuserdomains; 
	/scripts/update_db_cache;
	sleep 2
echo -e "DomÃ­nio >>> "${verd}$DOMINIO${rese}" <<< removido com SUCESSO!"

fi
